  "description": "Simple, accessible but powerful all-in-one word-processing and organization app for writers",
  "main": "main.ts",
  "type": "module",
  "scripts": {
    "lint": "cross-env NODE_OPTIONS=--max-old-space-size=8192 eslint . --ext .ts --fix",
    "fullbuildandstart": "cd ../webui && npm run buildprod && cd ../server && npm run build && node dist/server/src/main.js | bunyan -L",
    "build": "npx tsc && npx copyfiles -u3 ../webui/dist/webui/browser/** dist/",
    "start": "npm run build && node dist/server/src/main.js | bunyan -L",
    "start:prod": "node dist/server/src/main.js | bunyan -L",
    "startdevwin": "set PROFILE=DEV && npx tsx src/main.ts | bunyan -L",
    "startdevlinux": "set PROFILE=DEV npx tsx src/main.ts | bunyan -L"
  },
