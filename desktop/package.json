{
  "name": "writeepi",
  "version": "25.9.24",
  "author": "Writeepi",
  "description": "Simple, accessible but powerful all-in-one word-processing and organization app for writers",
  "exports": "./dist/desktop/src/main.js",
  "main": "./dist/desktop/src/main.js",
  "type": "module",
  "scripts": {
    "lint": "cross-env NODE_OPTIONS=--max-old-space-size=8192 eslint . --ext .ts --fix",
    "build": "npm run dist && npm run copy-files && npm run copy-app && npm run copy-resources",
    "dist": "npm run build:version && tsc",
    "clean": "rimraf out dist release build node_modules",
    "start": "set ELECTRON_ENABLE_LOGGING=1 && npm run build && electron dist/desktop/src/main.js",
    "start:buildfront": "cd ../webui && npm run buildprod && cd ../desktop && npm run start",
    "copy-files": "copyfiles -u 1 src/*.png dist/desktop/src/ && copyfiles -u 1 src/*.gif dist/desktop/src/ && copyfiles -u 1 src/*.ico dist/desktop/src/ && copyfiles -u 1 src/*.icns dist/desktop/src/",
    "copy-app": "copy-folder ../webui/dist/webui dist/webui/",
    "copy-resources": "copy-folder src/resources dist/desktop/src/resources",
    "package": "electron-forge package",
    "make": "npm run clean && npm ci && npm run build && electron-forge make",
    "publish": "electron-forge publish",
    "build:thes": "npx tsx tools/buildthes.ts",
    "build:version": "npx tsx tools/buildversion.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-dmg": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/html-to-text": "^9.0.4",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "copy-folder-util": "^1.1.5",
    "docx": "^9.5.1",
    "electron-context-menu": "^4.1.1",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "epub-gen-memory": "^1.1.2",
    "file-type": "^21.0.0",
    "html-entities": "^2.6.0",
    "html-to-text": "^9.0.5",
    "jspdf": "^3.0.2",
    "uuid": "^13.0.0",
    "uuidv7": "^1.0.2"
  }
}
